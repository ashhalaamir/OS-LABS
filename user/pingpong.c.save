#include "kernel/types.h"
#include "kernel/stat.h"
#include "user/user.h"

int main(void) {
	int p2c[2];
	int c2p[2];
	pipe(p2c);
	pipe(c2p);

	int pid = fork();

	if (pid < 0) {
	printf("fork failed\n");
	exit(1);
	}

	if (pid == 0) {
	close(p2c[1]);
	close(c2p[0]);
	for (int i = 0; i < 10; i++) {
	char buf;
	read(p2c[0], &buf, 1);
	printf("child received: %c (iteration %d)\n", buf, i+1);
	write(c2p[1], "x", 1);
	}
	close(p2c[0]);
	close(c2p[1]);
	exit(0);
	}
	else {
	close(p2c[0]);
	close(c2p[1]);
	for (int i = 0; i < 10; i++) {
	write(p2c[1], "v", 1);
	char buf;
	read(c2p[0], &buf, 1);
	printf("parent received: %c (iteration %d)\n", buf, i + 1);
	}
	close(p2c[1]);
	close(c2p[0]);
	wait(0);
	}
	exit(0);
	}


